/* ================= AUTH PAGES ================= */
.auth-container {
  max-width: 400px;
  margin: 6rem auto;
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  padding: 2rem;
  border-radius: 16px;
  box-shadow: 0 10px 25px rgba(0,0,0,0.3);
  color: white;
  text-align: center;
}

.auth-container input,
.auth-container select {
  width: 100%;
  padding: 0.8rem 1rem;
  margin: 0.5rem 0;
  border-radius: 8px;
  border: none;
  font-size: 1rem;
}

.auth-container button {
  width: 100%;
  margin-top: 1rem;
}

.auth-container label {
  font-size: 0.9rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin: 0.5rem 0;
}

.auth-container input[type="checkbox"] {
  width: 16px;
  height: 16px;
}

.auth-container a {
  color: white;
  text-decoration: underline;
}

.auth-container .checkbox-group {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-top: 0.5rem;
  font-size: 0.9rem;
}

/* ================= LEGAL PAGES ================= */
.legal-content {
  max-width: 800px;
  margin: 4rem auto;
  padding: 2rem;
  background: rgba(255,255,255,0.05);
  border-radius: 16px;
  box-shadow: 0 8px 20px rgba(0,0,0,0.3);
  line-height: 1.6;
}

.legal-content h1 {
  font-size: 2rem;
  margin-bottom: 1rem;
  color: var(--secondary);
}

.legal-content h2 {
  font-size: 1.2rem;
  margin-top: 1.5rem;
  margin-bottom: 0.5rem;
  color: var(--primary);
}

.legal-content p,
.legal-content ul,
.legal-content li {
  font-size: 1rem;
  color: #e0e0e0;
}

.legal-content ul {
  padding-left: 1.5rem;
  list-style: disc;
  margin-bottom: 1rem;
}

/* ================= DASHBOARD ================= */
.dashboard-body {
  background: linear-gradient(135deg, #0f172a, #020617);
  min-height: 100vh;
  color: white;
}

/* Top Bar */
.topbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14px 18px;
  background: linear-gradient(90deg, #6a5cff, #00e0ff);
}

.top-left {
  display: flex;
  align-items: center;
  gap: 12px;
}

.logo-text span {
  color: #020617;
}

.menu-btn {
  font-size: 24px;
  background: none;
  border: none;
  color: white;
  cursor: pointer;
}

/* Profile Image */
.profile-btn img {
  width: 38px;
  height: 38px;
  border-radius: 50%;
  border: 2px solid white;
}

/* Sidebar */


.sidebar {
  position: fixed;
  top: 0;
  left: -260px;
  width: 250px;
  height: 100vh;              /* IMPORTANT */
  background: #020617;
  padding-top: 70px;
  transition: 0.3s ease;
  z-index: 1000;

  overflow-y: auto;           /* ✅ ALLOW SIDEBAR SCROLL */
  -webkit-overflow-scrolling: touch;
}
.nav-item {
  display: block;
  padding: 15px 20px;
  color: white;
  text-decoration: none;
  border-bottom: 1px solid #1e293b;
  font-size: 0.95rem;
}

.nav-item:hover,
.nav-item.active {
  background: linear-gradient(90deg, #6a5cff, #00e0ff);
}

.logout {
  background: #b00020;
  border: none;
  width: 100%;
  text-align: left;
}

/* Sidebar sections */
.sidebar-section {
  padding: 10px 20px;
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: #94a3b8;
  margin-top: 15px;
}

/* Overlay */
#overlay {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.6);
  display: none;
  z-index: 900;
}

#overlay.show {
  display: block;
}

/* Dashboard Content */
.dashboard-content {
  padding: 20px;
}

.welcome {
  margin-bottom: 20px;
}

.welcome h1 {
  font-size: 1.9rem;
}

.welcome p {
  color: #cbd5f5;
}

/* Cards */
.cards {
  margin-top: 20px;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 15px;
}

.card {
  padding: 20px;
  border-radius: 16px;
  backdrop-filter: blur(10px);
}

.card h3 {
  font-size: 0.95rem;
  opacity: 0.9;
}

.gradient-purple {
  background: linear-gradient(135deg, #6a5cff, #a78bfa);
}

.gradient-blue {
  background: linear-gradient(135deg, #00e0ff, #38bdf8);
}

.gradient-green {
  background: linear-gradient(135deg, #22c55e, #4ade80);
}

.amount {
  font-size: 1.6rem;
  font-weight: bold;
  margin-top: 10px;
}

/* Quick Actions */
.quick-actions {
  margin-top: 30px;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  gap: 12px;
  margin-top: 10px;
}

.action-card {
  background: rgba(255,255,255,0.1);
  padding: 14px;
  border-radius: 12px;
  text-align: center;
  color: white;
  text-decoration: none;
  transition: 0.3s;
}

.action-card:hover {
  background: linear-gradient(90deg, #6a5cff, #00e0ff);
}

/* Dashboard footer */
.dashboard-body footer {
  margin-top: 40px;
  text-align: center;
  font-size: 0.85rem;
  color: #94a3b8;
}

.dashboard-body footer a {
  color: var(--secondary);
  margin: 0 6px;
}



