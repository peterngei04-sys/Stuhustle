========================= */

/* Forms */
.dashboard-content input,
.dashboard-content textarea {
  width: 100%;
  padding: 12px 14px;
  margin: 10px 0;
  border-radius: 12px;
  border: none;
  background: rgba(255,255,255,0.08);
  color: white;
  font-size: 0.95rem;
}

.dashboard-content textarea {
  min-height: 100px;
  resize: vertical;
}

.dashboard-content input::placeholder,
.dashboard-content textarea::placeholder {
  color: #cbd5f5;
}

/* Cards override (for listings) */
.cards .card {
  background: rgba(255,255,255,0.08);
  border-radius: 16px;
  padding: 18px;
  box-shadow: 0 10px 25px rgba(0,0,0,0.35);
  transition: transform 0.25s ease, box-shadow 0.25s ease;
}

.cards .card:hover {
  transform: translateY(-4px);
  box-shadow: 0 15px 35px rgba(0,0,0,0.45);
}

.cards .card h3 {
  margin-bottom: 8px;
  font-size: 1.1rem;
}

.cards .card p {
  opacity: 0.85;
  margin-bottom: 10px;
}

/* Search bar */
#searchInput {
  background: rgba(255,255,255,0.08);
  color: white;
  border: none;
  outline: none;
}

/* Details page */
#details h2 {
  font-size: 1.4rem;
  margin-bottom: 10px;
}

#details p {
  margin-bottom: 10px;
  line-height: 1.5;
}

/* Locked content notice */
#contact {
  margin-top: 15px;
  padding: 12px;
  border-radius: 12px;
  background: rgba(0,0,0,0.35);
  border: 1px dashed var(--secondary);
}

/* Buttons spacing */
.btn-primary,
.btn-outline {
  display: inline-block;
  margin-top: 10px;
}

/* Mobile tweaks */
@media (max-width: 600px) {
  .cards {
    grid-template-columns: 1fr;
  }
}
/* ===== Toast Notifications ===== */
.toast {
  position: fixed;
  bottom: 30px;
  left: 50%;
  transform: translateX(-50%) translateY(20px);
  padding: 14px 22px;
  border-radius: 14px;
  font-size: 0.95rem;
  font-weight: 500;
  opacity: 0;
  pointer-events: none;
  transition: all 0.35s ease;
  z-index: 9999;
}

.toast.show {
  opacity: 1;
  transform: translateX(-50%) translateY(0);
}

.toast.success {
  background: linear-gradient(90deg, #22c55e, #4ade80);
  color: #020617;
}

.toast.error {
  background: linear-gradient(90deg, #ef4444, #f87171);
  color: white;
}

/* Inline form error */
.form-error {
  margin-top: 0.8rem;
  color: #f87171;
  font-size: 0.9rem;
  display: none;
}
.auth-message {
  padding: 12px;
  border-radius: 8px;
  margin-bottom: 15px;
  font-size: 14px;
  text-align: center;
}

.auth-message.success {
  background: #e6fff2;
  color: #0f5132;
}

.auth-message.error {
  background: #ffe6e6;
  color: #842029;
}

.hidden {
  display: none;
}
